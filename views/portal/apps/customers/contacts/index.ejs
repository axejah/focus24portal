<%- include('../../../../includes/header.ejs') %>

<div class="container">
  <header class="mt-5 mb-5">
    <h3>Contacts overzicht</h3>
  </header>
  <div class="row" mt-3 mb-3>
    <div class="col">
      <a href="/portal/customers/contacts/<%= companyId %>/add" class="btn btn-primary">+ Contact toevoegen</a>
      <a href="/portal/customers" class="btn btn-secondary">Terug naar klantenoverzicht</a>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ContactID</th>
        <th scope="col">Voornaam</th>
        <th scope="col">Achternaam</th>
        <th scope="col">Telefoonnummer</th>
        <th scope="col">Telefoonnummer 2</th>
        <th scope="col">E-mailadres</th>
        <th scope="col">Details</th>
        <th scope="col">Bewerken</th>
      </tr>
    </thead>
    <tbody>
      <% if(contact.length < 1){ %>
      <h5 class="mb-5 mt-5">No contacts for this customer yet..</h5>
      <% } else { %>
      <% for (let i = 0; i <contact.length; i++) { %>
      <tr>
        <th scope=" row"><%= contact[i].id %></th>
        <td><%= contact[i].voornaam %></td>
        <td><%= contact[i].achternaam %></td>
        <td><%= contact[i].telefoonnummer1 %></td>
        <td><%= contact[i].telefoonnummer2 %></td>
        <td><%= contact[i].emailadres %></td>
        <td><a href="#" data-bs-toggle="modal" data-bs-target="#detailModal_<%=contact[i].id %>"
            class="btn btn-primary">Details</a>
          <div class="modal fade" id="detailModal_<%=contact[i].id %>" tabindex="-1" aria-labelledby="detailModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-xl">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="detailModalLabel">Details</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="row">
                    <div class="col-6">
                      <h5>Algemene gegevens</h5>
                      <span>Voornaam: <%=contact[i].voornaam %></span><br />
                      <span>Achternaam: <%=contact[i].achternaam %></span><br />
                      <span>Geslacht: <%=contact[i].geslacht %></span><br />
                      <span>Telefoonnummer 1: <%=contact[i].telefoonnummer1 %></span><br />
                      <span>Telefoonnummer 2: <%=contact[i].telefoonnummer2 %></span><br />
                      <span>Emailadres: <%=contact[i].emailadres %></span><br />
                      <br />
                      <span>Functie: <%=contact[i].functie %></span><br />
                      <span>Beslissingsbevoegd: <%=contact[i].beslissingsbevoegd %></span><br />
                      <span>Opmerkingen:<br /> <%=contact[i].remarks %></span><br />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td><a href="/portal/customers/contacts/edit/<%=contact[i].id %>" class="btn btn-secondary">Bewerken</a></td>
      </tr>
      <% } } %>

    </tbody>
  </table>

</div>

<%- include('../../../../includes/footer.ejs') %>