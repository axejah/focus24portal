<%- include('../../../includes/header.ejs') %>

<div class="container">
  <header class="mt-5 mb-5">
    <h3>Klantenoverzicht</h3>
  </header>
  <div class="row" mt-3 mb-3>
    <div class="col">
      <a href="/portal/customers/add" class="btn btn-primary">+ Klant toevoegen</a>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">CompanyID</th>
        <th scope="col">Bedrijfsnaam</th>
        <th scope="col">KvK-nummer</th>
        <th scope="col">Emailadres</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < customers.length; i++) { %>
      <tr>
        <th scope="row"><%= customers[i].id %></th>
        <td><%= customers[i].bedrijfsnaam %></td>
        <td><%= customers[i].kvk_nummer %></td>
        <td><%= customers[i].emailadres %></td>
        <td><a href="/portal/customers/contacts/<%= customers[i].id %>" class="btn btn-success">Contacts</a></td>
        <td><a href="#" data-bs-toggle="modal" data-bs-target="#detailModal_<%= customers[i].id %>"
            class="btn btn-primary">Details</a>
          <div class="modal fade" id="detailModal_<%= customers[i].id %>" tabindex="-1"
            aria-labelledby="detailModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="detailModalLabel">Details</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="row">
                    <div class="col-6">
                      <h5>Algemene gegevens</h5>
                      <span>Bedrijfsnaam: <%= customers[i].bedrijfsnaam %></span><br />
                      <span>KvK-nummer: <%= customers[i].kvk_nummer %></span><br />
                      <span>Telefoonnummer 1: <%= customers[i].telefoonnummer1 %></span><br />
                      <span>Telefoonnummer 2: <%= customers[i].telefoonnummer2 %></span><br />
                      <span>Emailadres: <%= customers[i].emailadres %></span><br />
                    </div>
                    <div class="col-6">
                      <h5>Adresgegevens</h5>
                      <span>Straat: <%= customers[i].straat %></span><br />
                      <span>Huisnummer: <%= customers[i].huisnummer %></span><br />
                      <span>Postcode: <%= customers[i].postcode %> </span><br />
                      <span>Plaats: <%= customers[i].plaats %></span><br />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td><a href="/portal/customers/edit/<%= customers[i].id %>" class="btn btn-secondary">Bewerken</a></td>
      </tr>
      <% } %>

    </tbody>
  </table>

</div>

<%- include('../../../includes/footer.ejs') %>